<h1>Your Cart</h1>

<% @items_in_cart.each do |item| %>
  <h5><%= item.product.name %>: <%= item.product.price_format %></h5>
  <%= link_to("Remove from cart", "/cart/#{item.id}", method: :delete, class: "btn btn-sm btn btn-danger") %>
  <% end %>
  <% if @items_in_cart.any? %>
  <p> Total: <%= current_user.total_price_in_cart %> </p>
  <%= link_to("Check out", "/orders", method: :post, class: "btn btn-sm btn btn-primary", id: "checkout-btn") %>

  <% else %>
  <h4>Your cart is empty. Go buy some shit!</h4>

  <% end %>