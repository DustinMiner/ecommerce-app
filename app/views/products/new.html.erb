<h1>Create new product</h1>

<%= form_tag("/products", method: :post) do %>

<div class="row">
  <div class= "col-sm-6">
    
<%= label_tag(:name, "Enter product's name:") %>
<%= text_field_tag(:name, nil, class: "form-control") %>
    
  </div>

<div class="col-sm-6">
<div class= "form-group">
<%= label_tag(:category_id, "Select a Product Category:") %>
<%= select_tag(:category_id, options_from_collection_for_select(@categories, :id, :name), prompt: "Select Product Category", class: "form-control") %>
</div>
</div>
</div>
<div class= "form-group">
<%= label_tag(:description, "Enter product's description") %>
<%= text_area_tag(:description, nil, class: "form-control") %>
</div>

<div class= "form-group">
<%= label_tag(:image_url, "Enter a URL to oyur product's image:") %>
<%= text_field_tag(:image_url, nil, class: "form-control") %>
</div>

<div class= "row">
<div class= "col-sm-3">
<%= label_tag(:price, " Enter product's price") %>
<%= number_field_tag(:price, nil, class: "form-control") %>
  
</div>
</div>

<%= submit_tag("Create Product", class: "btn btn-success") %>

<% end %>
