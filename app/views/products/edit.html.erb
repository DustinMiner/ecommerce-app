<h1>Edit product</h1>



    <% if @product.errors.any? %>
  <div id="error-explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> This prevented product from being updated:</h2>

    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag("/products/#{@product.id}",multipart: true, method: :put) do %>

<div class="row">
<div class="col-sm-6">
<%= label_tag(:name, "Edit product's name:") %>
<%= text_field_tag(:name, @product.name, class: "form-control") %>
</div>

<div class="col-sm-6"
<div class="form-group">
  <%= label_tag(:category_id, "Select a Product Category:") %>
<%= select_tag(:category_id, options_from_collection_for_select(@categories, :id, :name, @product.category_id), prompt: "Select Product Category", class: "form-control") %>
</div>
</div>
</div>

<div class= "form-control" style= "margin-bottom: 1rem; margin-top: 1rem">
<%= label_tag(:image, "Add an image") %>
<%= file_field_tag(:image) %>
</div>

<div class="form-group">
<%= label_tag(:description, "Edit product's description") %>
<%= text_area_tag(:description, @product.description, class: "form-control") %>
<%= label_tag(:image_url, "Enter a URL to your product's image:") %>
<%= text_field_tag(:image_url, @product.image_url, class: "form-control") %>
</div>

<div class= "row">
<div class="col-sm-3">
<%= label_tag(:price, " Edit product's price") %>
<%= number_field_tag(:price, @product.price, class: "form-control") %>
</div>
</div>
  

  
  
<div>
<%= submit_tag("Update Product", class: "btn btn-success") %>
  
</div>


<% end %>