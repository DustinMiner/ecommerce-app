<h1>Edit product</h1>

<%= form_tag("/products/#{@product.id}", method: :put) do %>

<%= label_tag(:name, "Edit product's name:") %>
<br>
<%= text_field_tag(:name, @product.name) %>
<br>
<%= label_tag(:description, "Edit product's description") %>
<br>
<%= text_area_tag(:description, @product.description, size: "40x10") %>
<br>
<%= label_tag(:price, " Edit product's price") %>
<br>
<%= number_field_tag(:price, @product.price) %>
<br>
<%= submit_tag("Update Product") %>


<% end %>